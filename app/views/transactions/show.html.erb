<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-xs-3"><h1>Transaction Details</h1></div>
<div class="col-xs-6">
	
<%= link_to edit_transaction_path(@transaction), class: 'btn btn-info', style: 'position:absolute;margin-left:370px', id: 'newItemButton' do %>
  <i class="glyphicon glyphicon-edit"> Edit</i>
<% end %>

<%= link_to transactions_path, class: 'btn btn-danger', style: 'position:absolute;margin-left:480px', id: 'newItemButton' do %>
  <i class="glyphicon glyphicon-remove"> Back</i>
<% end %>

</div>
</div> 

<div style="width:70%">
<%= form_with(model: @transaction, local: true, class: 'form-horizontal') do |form| %>
  
  <div class="form-group">
      <%= form.label :Transaction_Identifier , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :transaction_id, id: :transaction_transaction_id , class: "form-control" , readonly: :true %>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Book_Name , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :book_id, id: :transaction_book_id ,value: @transaction.book.book_name, class: "form-control" , readonly: :true %>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Reader_Name , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_name, id: :transaction_reader_name ,value: @transaction.reader.reader_name, class: "form-control" , readonly: :true %>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Issue_date , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.date_field :issue_date_time, id: :transaction_issue_date_time , class: "form-control", readonly: :true %>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Book_Returned , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :returned, id: :transaction_returned , class: "form-control", readonly: :true %>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Returned_date , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.date_field :returned_date, id: :transaction_returned_Date , class: "form-control", readonly: :true %>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Due_date , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.date_field :due_date_time, id: :transaction_due_date_time , class: "form-control", readonly: :true %>
  </div>
  <BR>
  
  
  
<% end %>
</div>
