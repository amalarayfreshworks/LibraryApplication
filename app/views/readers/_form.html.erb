<div style="width:70%">
<%= form_with(model: reader, local: true, class: 'form-horizontal') do |form| %>
  <% if reader.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reader.errors.count, "error") %> prohibited this reader from being saved:</h2>

      <ul>
      <% reader.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if from_edit %>
    <div class="form-group">
        <%= form.label :reader_Identifier , class:"col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_field :reader_id, id: :reader_reader_id , class: "form-control", readonly: true%>
        </div>
    </div>
  <% end %>
  <div class="form-group">
      <%= form.label :Name , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_name, id: :reader_reader_name , class: "form-control"%>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Mobile_Number , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_mobile_num, id: :reader_reader_mobile_num , class: "form-control"%>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Email_Id , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_email, id: :reader_reader_email , class: "form-control"%>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Issue_date , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.date_field :membership_start_date, id: :reader_membership_start_date , readonly: from_edit, class: "form-control"%>
      </div>
  </div>
    <div class="form-group">
      <%= form.label :End_date , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.date_field :membership_end_date, id: :reader_membership_end_date , class: "form-control"%>
      </div>
  </div>
  <br>
  <div  style="margin-left: 145px">
    <input class="btn btn-success" type="submit" value="Update Reader" />
  </div>
  
<% end %>
</div>

