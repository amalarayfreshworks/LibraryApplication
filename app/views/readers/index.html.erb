<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-xs-3"></div>
<div class="col-xs-9">
<%= link_to new_reader_path, class: 'btn btn-success', style: 'margin-left:550px', id: 'newItemButton' do %>
  <i class="glyphicon glyphicon-plus"></i> New Reader
<% end %>
</div>
</div>  
<br>
 <div class="row">
        <div class="my-panel-style panel panel-primary filterable">
            <div class=" my-panel-header panel-heading" >
                <h4>Readers</h4>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table-striped table-bordered " >
              <thead>
                <tr class="filters">
                  <th><input type="text" class="form-control" placeholder="Reader Identifier" disabled></th>
                  <th><input type="text" class="form-control" placeholder="Name" disabled></th>
                  <th><input type="text" class="form-control" placeholder="Mobile Number" disabled></th>
                  <th><input type="text" class="form-control" placeholder="Email Id" disabled></th>
                <!--   <th>Reader identifier</th>
                  <th>Reader name</th>
                  <th>Reader category</th> -->
                  <th colspan="3">Actions</th>
                </tr>
              </thead>

  <tbody>
    <% @readers.each do |reader| %>
      <tr >
        <td><%= reader.reader_id %></td>
        <td><%= reader.reader_name %></td>
        <td><%= reader.reader_mobile_num %></td>
         <td><%= reader.reader_email %></td>
        <td><%= link_to reader ,class: 'btn btn-primary btn-xs' do %><i class="glyphicon glyphicon-eye-open"></i> <% end %></td>
        <td><%= link_to edit_reader_path(reader),class: 'btn btn-info btn-xs' do %><i class="glyphicon glyphicon-edit"></i> <% end %></td>
        <td><%= link_to 'Destroy', data: { toggle: "modal", target: "#my-reader-modal#{reader.reader_id}"}, class: 'btn btn-danger btn-xs' do %><i class="glyphicon glyphicon-remove"></i> <% end %></td>
        <div class="modal fade" id="my-reader-modal<%=reader.reader_id%>" title="Delete" style="">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header" style="background-color: #f1f1f1;">
                  <button aria-hidden="true" class="close" data-dismiss="modal" type="button">Ã—</button>
                  <h3 id="myModalLabel">Delete Reader </h3>
                </div>
                <div class="modal-body">
                  Delete the reader <b>'<%= reader.reader_name %>'</b>, which will delete all transactions associated with it. Are you sure?
                </div>
                <div class="modal-footer">
                  <%= link_to 'Delete', reader, method: :delete , class: 'btn btn-danger'%>
                 
                </div>
              </div>
            </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


