<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-xs-3"><h1>Reader Details</h1></div>
<div class="col-xs-6">
	
<%= link_to edit_reader_path(@reader), class: 'btn btn-info', style: 'position:absolute;margin-left:370px', id: 'newItemButton' do %>
  <i class="glyphicon glyphicon-edit"> Edit</i>
<% end %>

<%= link_to readers_path, class: 'btn btn-danger', style: 'position:absolute;margin-left:480px', id: 'newItemButton' do %>
  <i class="glyphicon glyphicon-remove"> Back</i>
<% end %>

</div>
</div> 

<div style="width:70%">
<%= form_with(model: @reader, local: true, class: 'form-horizontal') do |form| %>
  
  <div class="form-group">
      <%= form.label :Reader_Identifier , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_id, id: :reader_reader_id , class: "form-control" , readonly: :true %>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Name , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_name, id: :reader_reader_name , class: "form-control", readonly: :true %>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Mobile_Number , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_mobile_num, id: :reader_reader_mobile_num, class: "form-control", readonly: :true %>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Email_id , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_email, id: :reader_reader_email , class: "form-control", readonly: :true %>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Membership_Start_Date , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.date_field :membership_start_date, id: :reader_membership_start_date , class: "form-control", readonly: :true %>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Membership_End_Date , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :reader_email, id: :reader_membership_end_date , class: "form-control", readonly: :true %>
      </div>
  </div>
  <BR>
  
  
  
<% end %>
</div>
