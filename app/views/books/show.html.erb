      <%= form.label :Name , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :book_desc, id: :book_book_desc , class: "form-control", readonly: :true %>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Category , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :book_category, id: :book_book_category , class: "form-control", readonly: :true %>
      </div>
  </div>
