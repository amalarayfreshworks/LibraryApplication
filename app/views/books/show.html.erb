<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-xs-3"><h1>Book Details</h1></div>
<div class="col-xs-6">
	
<%= link_to edit_book_path(@book), class: 'btn btn-info', style: 'position:absolute;margin-left:370px', id: 'newItemButton' do %>
  <i class="glyphicon glyphicon-edit"> Edit</i>
<% end %>
<% if @from_search == 'true'
     attrib = {}
     attrib['search_books'] = {}
     attrib['search_books']['query'] = @query
     back_path = search_books_path(attrib) 
    else
     back_path = books_path
    end%>
<%= link_to back_path, class: 'btn btn-danger', style: 'position:absolute;margin-left:480px', id: 'newItemButton' do %>
  <i class="glyphicon glyphicon-remove"> Back</i>
<% end %>

</div>
</div> 
