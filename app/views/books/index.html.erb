<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-xs-3"></div>
<div class="col-xs-9">
<%= link_to new_book_path, class: 'btn btn-success', style: 'margin-left:550px', id: 'newItemButton' do %>
  <i class="glyphicon glyphicon-plus"></i> New Book
<% end %>
</div>
</div>  
<br>
<p>
  Press <%= link_to 'here', search_books_path %> to search for books that are available for lending from the library.
</p>
 <div class="row">
        <div class="my-panel-style panel panel-primary filterable">
            <div class=" my-panel-header panel-heading" >
                <h4>Books</h4>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table-striped table-bordered " >
              <thead>
                <tr class="filters">
                  <th><input type="text" class="form-control" placeholder="Book Identifier" disabled></th>
                  <th><input type="text" class="form-control" placeholder="Book Name" disabled></th>
                  <th><input type="text" class="form-control" placeholder="Book Category" disabled></th>
                  <th><input type="text" class="form-control" placeholder="Available" disabled></th>
                  <th><input type="text" class="form-control" placeholder="Damaged" disabled></th>
                <!--   <th>Book identifier</th>
                  <th>Book name</th>
                  <th>Book category</th> -->
                  <th colspan="3">Actions</th>
                </tr>
              </thead>

              <tbody>
                <% @books.each do |book| %>
                  <tr >
                    <td><%= book.book_id %></td>
                    <td><%= book.book_name %></td>
                    <td><%= book.book_category %></td>
                    <td><%= (book.book_avail_in_lib == true)? "Available" : "Unavailable" %></td>
                    <td><%= (book.book_damaged == true)? "Damaged" : "Not Damaged" %></td>
                    <td><%= link_to book ,class: 'btn btn-primary btn-xs' do %><i class="glyphicon glyphicon-eye-open"></i> <% end %></td>
                    <td><%= link_to edit_book_path(book),class: 'btn btn-info btn-xs' do %><i class="glyphicon glyphicon-edit"></i> <% end %></td>
                    <td><%= link_to 'Destroy', data: { toggle: "modal", target: "#my-modal#{book.book_id}"}, class: 'btn btn-danger btn-xs' do %><i class="glyphicon glyphicon-remove"></i> <% end %></td>
                    <div class="modal fade" id="my-modal<%=book.book_id%>" title="Delete" style="">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header" style="background-color: #f1f1f1;">
                              <button aria-hidden="true" class="close" data-dismiss="modal" type="button">Ã—</button>
                              <h3 id="myModalLabel">Delete Book </h3>
                            </div>
                            <div class="modal-body">
                              Delete the book <b>'<%= book.book_name %>'</b>, which will delete all transactions associated with it. Are you sure?
                            </div>
                            <div class="modal-footer">
                              <%= link_to 'Delete', book, method: :delete , class: 'btn btn-danger'%>
                             
                            </div>
                          </div>
                        </div>
                    </div>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>
</div>
</div>


