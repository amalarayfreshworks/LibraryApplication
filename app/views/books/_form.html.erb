<p id="notice"><%= notice %></p>
<div style="width:70%">
<%= form_with(html:{id: 'book_edit_form'},model: book, local: true, class: 'form-horizontal') do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this reader from being saved:</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <%= form.label :Name , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :book_name, id: :book_book_name , class: "form-control"%>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Description , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :book_desc, id: :book_book_desc , class: "form-control"%>
      </div>
  </div>
  <div class="form-group">
      <%= form.label :Category , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :book_category, id: :book_book_category , class: "form-control"%>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Damaged , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.select :book_damaged, [['Not Damaged', false],['Damaged', true]], selected: 'Not Damaged', id: :book_book_damaged ,class: "form-control"%>
      </div>
  </div>
   <div class="form-group">
      <%= form.label :Available , class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.select :book_avail_in_lib,[['Available', true ], ['Unavailable', false]], id: :book_book_avail_in_lib, class: "form-control"%>
      </div>
  </div>
  <BR>
  
  <div  style="margin-left: 145px">
    <input class="btn btn-success" type="submit" value="Update Book" />
  </div>
  
<% end %>
</div>

